@page
@model WebApplication6.Pages.NameModel
@{
    string name = "Robert Paulson";
    string? tmp = Request.Form["name"];
    if (!string.IsNullOrEmpty(tmp))
    {
        name = tmp;
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>ASP.NET</title>
</head>
<body>
    <ul>
        @for (int i = 0; i < 10; i++)
        {
            <li>His name is @name</li>
        }
    </ul>
</body>
</html>